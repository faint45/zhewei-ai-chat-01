{
  "version": 2,
  "builds": [
    {
      "src": "website_server.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb" }
    },
    {
      "src": "static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/website_server.py"
    }
  ],
  "env": {
    "PYTHONPATH": "."
  },
  "functions": {
    "website_server.py": {
      "maxDuration": 30
    }
  }
}